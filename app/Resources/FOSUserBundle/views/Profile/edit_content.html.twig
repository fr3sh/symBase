{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
 {#   {{ form_widget(form) }}#}
   
    
     <div id="legend">
      <legend class="">Edycja Profilu</legend>
    </div>
      
   
       <div class="form-group row">
      <!-- Username -->
      {{ form_label(form.username, null,{'label_attr': {'class': ' col-sm-2 form-control-label' , 'for':'fos_user_profile_form_current_password'}}) }}
      <div class="col-sm-5">
         {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(form.username) }}
        <p class="help-block">Nazwa użytkownika nie może mieć spacji.</p>
      </div>
    </div>
    
    <div class="form-group row">
      <!-- E-mail -->
      {{ form_label(form.email, null,{'label_attr': {'class': 'col-sm-2 form-control-label'}} ) }}
      <div class="col-sm-5">
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
         {{ form_errors(form.email) }}
        <p class="help-block">Proszę wpisać adres mailowy</p>
      </div>
    </div> 
        
        
      <div class="form-group row">
      <!-- E-mail -->
      {{ form_label(form.current_password, null,{'label_attr': {'class': 'col-sm-2 form-control-label'}} ) }}
      <div class="col-sm-5">
        {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
         {{ form_errors(form.current_password) }}
        <p class="help-block">Proszę wpisać aktualne hasło</p>
      </div>
    </div>    
        
    
    <div class="form-group row">
      <!-- Button -->
      <div class="col-sm-5">
              
   
        <input class="btn btn-success" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
      </div>
    </div>
    
      
       
{{ form_end(form) }}


